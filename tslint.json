{
  "extends": ["tslint-config-airbnb", "tslint-react"],
  "rules": {
    "max-line-length": [
      true,
      150
    ],
    "jsx-no-multiline-js": false,
    "variable-name": [
      true,
      "check-format",
      "allow-leading-underscore",
      "allow-pascal-case",
      "allow-snake-case"
    ],
    "no-else-after-return": [true, "allow-else-if"],
    "curly": true,
    "no-any": true,
    "no-debugger": true,
    "no-increment-decrement": false,
    "no-require-imports": true
  }
}
